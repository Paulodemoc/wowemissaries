<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WoWEmissaries.Views.SettingsPage"
             Title="Settings"
             x:Name="SettingsPage">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Orientation="Horizontal" Padding="15">
                <Label Text="Update on Wi-Fi only" FontSize="Medium" HorizontalOptions="StartAndExpand" />
                <Switch x:Name="WifiOnly" Toggled="UpdateSettings" HorizontalOptions="End" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>